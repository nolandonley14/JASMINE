<AppLayout>:
    size: root.width, root.height
    TabSection:
        id: tabBar
    BottomBar:

<Spacer@Widget>:
    size_hint_x: None
    width: 10

<ScrollLabel>:
    Label:
        size_hint_x: None
        halign: 'center'
        text: root.text
        width: self.texture_size[0]
        font_name: "HeaderLight"
        font_size: 40

<MusicTab>:
    songProgress: progressBar
    ppBut2: playpause2
    canvas.before:
        PushMatrix
        Rotate:
            angle: -90
            axis: 0,0,1
            origin: self.center
    canvas.after:
        PopMatrix
    canvas:
        Rectangle:
            source: 'iconFolder/tabImages/musicTab.png'
            size: 67, 67
            pos: self.pos[0] + 15, self.pos[1]

    FloatLayout:
        size: root.width, root.height

        Image:
            source: 'Screens/musicTab.png'
            pos_hint: {"x": 0, "y": 0.08}
            size_hint: 1, 1

        ScrollLabel:
            id: titleLabel
            srcoll_y: -1
            text: root.title
            pos_hint: {"center_x": 0.78, "center_y": 0.84}

        Label:
            id: artistLabel
            text: root.artist
            font_name: "HeaderLight"
            font_size: 30
            pos_hint: {"center_x": 0.68, "center_y": 0.76}

        PPButton:
            id: playpause2
            nocache: True
            pos_hint: {"x": 0.63, "y": 0.5}
            size_hint: 0.1, 0.1

        Button:
            pos_hint: {"x": 0.46, "y": 0.5}
            size_hint: 0.07, 0.1
            background_normal: ''
            background_color: 1, 0, 0, 0
            on_release: root.prevSong()

        Button:
            pos_hint: {"x": 0.82, "y": 0.5}
            size_hint: 0.07, 0.1
            background_normal: ''
            background_color: 0, 1, 0, 0
            on_release: root.nextSong()

        Label:
            id: songNumber
            text: root.songNum
            font_name: "HeaderLight"
            font_size: 30
            pos_hint: {"center_x": 0.68, "center_y": 0.69}

        Label:
            id: songDurationLabel
            text: root.songDuration
            font_name: "HeaderLight"
            font_size: 17
            pos_hint: {"center_x": 0.88, "center_y": 0.33}

        Label:
            id: songTimeLabel
            text: root.songTime
            font_name: "HeaderLight"
            font_size: 17
            pos_hint: {"center_x": 0.12, "center_y": 0.33}

        ProgressBar:
            id: progressBar
            pos_hint: {"center_x": 0.5, "center_y": 0.37}
            size_hint_x: .8
            max: 10000
            value: 0


