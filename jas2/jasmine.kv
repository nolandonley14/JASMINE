<TabbedPanelStrip>
    canvas:
        Color:
            rgba: hex('#090807')
        Rectangle:
            size: self.size
            pos: self.pos

<TabSection>:
    size_hint: 1, 1
    pos_hint: {'center_x': .5, 'center_y': .5}
    tab_pos: 'left_top'
    tab_height: 83
    tab_width: self.size[1]/len(self.tab_list)
    do_default_tab: False
    strip_border: 0, 0, 0, 0
    background_color: 0, 0, 0, 1

    HomeTab:
        id: HomeTab
        background_color: 0, 0, 0, 0

    SettingsTab:
        id: SettingsTab
        background_color: 0, 0, 0, 0

    WeatherTab:
        id: WeatherTab
        background_color: 0, 0, 0, 0

    MapsTab:
        id: MapsTab
        background_color: 0, 0, 0, 0

    MusicTab:
        id: MusicTab
        background_color: 0, 0, 0, 0

<BottomBar>:
    time: timeLabel
    size_hint: 0.91, 0.14
    pos_hint: {"bottom": 1, "right": 1}
    cols: 5
    orientation: 'horizontal'
    canvas:
        Color:
            rgba: hex('#090807')
        Rectangle:
            size: self.size
            pos: self.pos

    Widget:
        width: 20
        size_hint_x: None

    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'left'
        Image:
            source: 'iconFolder/png/004-pixel.png'
            pos_hint: {'center_y': .5}
            size: 30, 30
            size_hint_x: None
            size_hint_y: None

    Label:
        id: timeLabel
        text: "Time"
        font_name: "HeaderLight"
        font_size: 30
        pos_hint: {'center_y': 0.5}

    AnchorLayout:
        anchor_y: 'center'
        anchor_x: 'right'
        Image:
            source: 'iconFolder/nolanHead.png'
            pos_hint: {'center_y': .5}
            size: 35, 35
            size_hint_x: None
            size_hint_y: None

    Widget:
        width: 20
        size_hint_x: None

<CameraScreen>:
    name: 'camera'
    orientation: 'vertical'
    FloatLayout:
        size: root.width, root.height
        Camera:
            id: camera
            resolution: (640, 480)
            play: True
        ToggleButton:
            text: "Play"
            on_press: camera.play = not camera.play
            size_hint_y: None
            height: '48dp'
    Button:
        pos_hint: {"x": 0, "y": 0}
        size_hint: .1, .15
        background_normal: ''
        background_color: 0, 0, 0, 0
        on_release:
            app.root.current = "main"
